<?xml version="1.0"?>
<map proto="1.3.0">
<name>Flexure</name>
<version>1.0.0</version>
<objective>Capture the wool or elimate the other team to win.</objective>
<gamemode>blitz</gamemode>
<gamemode>ctw</gamemode>
<authors>
    <author uuid="ecbc58c1-ae7f-45c4-945c-cb3ab3e104cc" contribution="Map concept, ideas and building"/> <!-- Sbongkh -->
    <author uuid="d3635173-3f67-447b-b079-d4f772f560a6" contribution="Map ideas, WE and building"/> <!-- PixelRanch -->
</authors>
<contributors>
    <contributor uuid="62b6d081-8df8-4c09-aa15-71141ca7df76" contribution="Building help + moral support"/> <!-- Arzanex -->
    <contributor uuid="8e8fe795-2750-441f-9118-75f7415a30e3" contribution="Building help"/> <!-- Renner3 -->
    <contributor uuid="82d03646-d1a1-4383-a533-9509b130f751" contribution="Ideas, WE + server host"/> <!-- iLifting -->
    <contributor uuid="af9c1942-af66-42d1-89f9-9b677c281e03" contribution="Map XML"/> <!-- _IQ -->
</contributors>
<rules>
    <rule>Players are only allowed to take one wool at a time.</rule>
</rules>
<teams>
    <team color="dark red" max="16">Red</team>
    <team color="blue" max="16">Blue</team>
</teams>
<blitz>
    <lives>1</lives>
    <title>Blitz: CTW</title>
    <time>5m</time>
</blitz>
<timelock>on</timelock>
<spawns>
    <spawn team="red" kit="red" yaw="180">
        <point>0.5,41,39.5</point>
    </spawn>
    <spawn team="blue" kit="blue" yaw="0">
        <point>0.5,41,-38.5</point>
    </spawn>
    <default yaw="0" kit="all">
        <point>0.5,58,0.5</point>
    </default>
</spawns>
<kits>
    <kit name="all">
        <potion duration="oo">night vision</potion>
    </kit>
    <kit name="spawn" parents="all">
        <item slot="0">iron sword</item>
        <item slot="1">bow</item>
        <item slot="2" amount="16">cooked beef</item>
        <item slot="8" amount="8">arrow</item>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate color="0066cc" enchantment="protection environmental:1">leather chestplate</chestplate>
        <leggings>iron leggings</leggings>
        <boots color="0066cc">leather boots</boots>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <chestplate color="cd0000" enchantment="protection environmental:1">leather chestplate</chestplate>
        <leggings>iron leggings</leggings>
        <boots color="cd0000">leather boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>cooked beef</item>
</itemremove>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<wools>
    <wool team="blue" color="purple">
        <block>0,42,-33</block>
    </wool>
    <wool team="red" color="purple">
        <block>0,42,33</block>
    </wool>
</wools>
</map>
