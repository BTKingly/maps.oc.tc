<?xml version="1.0"?>
<map proto="1.3.2">
<name>Cruor Castle Blitz</name>
<version>1.0.0</version>
<objective>Eleminate the other team to win!</objective>
<phase>development</phase>
<authors>
    <author uuid="af9c1942-af66-42d1-89f9-9b677c281e03"/> <!-- _IQ -->
    <author uuid="ec80a24a-4e83-4049-8e1d-77abad67e8f3"/> <!-- Bamby_ -->
</authors>
<contributors>
    <contributor uuid="060baa18-2852-40d8-afcb-e61607c04be3"/> <!-- Pepsidawg00 -->
    <contributor uuid="130be12a-f3b9-4b7d-ad39-7b45e84d3d0f"/> <!-- Veiyl -->
</contributors>
<rules>
    <rule>Do not go on the land surrounding the castle.</rule>
</rules>
<teams>
    <team color="blue" max="12">Blue</team>
    <team color="yellow" max="12">Yellow</team>
</teams>
<blitz>
    <time>5m</time>
    <lives>1</lives>
</blitz>
<timelock>off</timelock>
<spawns>
    <spawn team="yellow" kit="yellow" yaw="45">
        <cuboid min="114,68,75" max="112,68,73"/>
    </spawn>
    <spawn team="blue" kit="blue" yaw="-133">
        <cuboid min="77,68,108" max="79,68,110"/>
    </spawn>
    <default yaw="135">
        <block>76,68,72</block>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="2" amount="16">arrow</item>
        <item slot="3" amount="2">golden apple</item>
        <item slot="4" amount="16">cooked beef</item>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="6678C5">leather helmet</helmet>
        <chestplate>iron chestplate</chestplate>
        <leggings>iron leggings</leggings>
        <boots>iron boots</boots>
    </kit>
    <kit name="yellow" parents="spawn">
        <helmet color="E9E955">leather helmet</helmet>
        <chestplate>iron chestplate</chestplate>
        <leggings>iron leggings</leggings>
        <boots>iron boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>cooked beef</item>
    <item>golden apple</item>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>iron chestplate</item>
    <item>iron leggings</item>
    <item>iron boots</item>
    <item>painting</item>
</itemremove>
<regions>
    <apply block="deny-all">
        <rectangle name="map" min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
</map>
