<?xml version="1.0"?>
<map proto="1.3.5">
<include src="blitz-global.xml" />
<name>Relapse UHC</name>
<version>1.5.3</version>
<objective>Eliminate the other team within 5 minutes!</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="f690a591-348b-482e-a18d-7779d0c0a28c"/> <!-- minimitch0199 -->
</authors>
<blitz>
    <time>5m</time>
    <lives>1</lives>
    <broadcastLives>false</broadcastLives>
    <title>Blitz : UHC</title>
</blitz>
<teams>
    <team color="dark purple" max="8" max-overfill="12">Purple</team>
    <team color="gold" max="8" max-overfill="12">Orange</team>
</teams>
<spawns>
    <spawn team="purple" kit="purple" yaw="-50" safe="true">
        <block>-2,52,8</block>
    </spawn>
    <spawn team="orange" kit="orange" yaw="120" safe="true">
        <block>54,52,34</block>
    </spawn>
    <default kit="default" yaw="89">
        <block>0,63,0</block>
    </default>
</spawns>
<kits>
    <kit name="default">
        <potion duration="oo" potion_particles="false">night vision</potion>
    </kit>
    <kit name="spawn" force="true">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="8">golden apple</item>
        <item slot="28" amount="12">arrow</item>
        <helmet>leaves</helmet>
        <chestplate>gold chestplate</chestplate>
        <boots>iron boots</boots>
    </kit>
    <kit name="purple" parents="spawn">
        <leggings color="9200BA">leather leggings</leggings>
    </kit>
    <kit name="orange" parents="spawn">
        <leggings color="FC7D28">leather leggings</leggings>
    </kit>
</kits>
<killreward>
    <item amount="1">golden apple</item>
</killreward>
<regions>
    <apply block="deny-blocks">
        <rectangle min="-oo,-oo" max="oo,oo" />
    </apply>
</regions>
<gamerules>
    <doDaylightCycle>false</doDaylightCycle>
    <naturalRegeneration>false</naturalRegeneration>
</gamerules>
<hunger>
    <depletion>off</depletion>
</hunger>
<itemremove>
    <item>leaves</item>
    <item>gold chestplate</item>
    <item>iron boots</item>
    <item>golden apple</item>
</itemremove>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
</map>
