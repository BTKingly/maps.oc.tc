<?xml version="1.0"?>
<map proto="1.3.0">
<name>Twilight Zone Blitz</name>
<version>1.5.0</version>
<objective>Eliminate the other team before 10 minutes is up</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="b8e37008-a61d-4452-9375-fb9872f5bfea" contribution="Map planner, terraforming, and ideas"/> <!-- daeshik -->
</authors>
<contributors>
    <contributor uuid="900b844e-747c-4d5b-b9e3-afa714ec9bd5" contribution="Ideas, and buildings"/> <!-- UnPhair -->
    <contributor uuid="5bce6a2c-4010-4f5c-9e79-822fc164528d" contribution="Ideas, planning, and spawn kits"/> <!-- MK325 -->
    <contributor uuid="22ba442b-cf26-4d09-b290-8d4e50a551b2" contribution="XML"/> <!-- Dinner1111 -->
</contributors>
<teams>
    <team color="dark red" max="40">Red</team>
    <team color="blue" max="40">Blue</team>
</teams>
<kits>
    <kit name="spawn">
        <item slot="0" enchantment="damage all:1">diamond sword</item>
        <item slot="1" enchantment="arrow damage:1">bow</item>
        <item slot="2" damage="16453">potion</item>
        <item slot="3" damage="16453">potion</item>
        <item slot="4" damage="16453">potion</item>
        <item slot="5" damage="8226">potion</item>
        <item slot="6" damage="8201">potion</item>
        <item slot="8" amount="32">cooked beef</item>
        <item slot="28" amount="16">arrow</item>
        <item slot="30" damage="8193">potion</item>
        <item slot="31" damage="8193">potion</item>
        <item slot="32" damage="8226">potion</item>
        <item slot="33" damage="8201">potion</item>
        <item slot="13" damage="16394">potion</item>
        <item slot="22" damage="16394">potion</item>
        <item slot="14" damage="16392">potion</item>
        <item slot="23" damage="16392">potion</item>
        <helmet>diamond helmet</helmet>
        <chestplate>diamond chestplate</chestplate>
        <leggings>diamond leggings</leggings>
        <boots enchantment="protection fall:1">diamond boots</boots>
        <potion amplifier="4" duration="5">heal</potion>
        <potion aplifier="1" duration="15">increase_damage</potion>
    </kit>
</kits>
<spawns>
    <spawn team="red" kit="spawn" yaw="0">
        <cuboid min="190,18,-97" max="182,18,-101"/>
    </spawn>
    <spawn team="blue" kit="spawn" yaw="180">
        <cuboid min="50,18,96" max="58,18,100"/>
    </spawn>
    <default yaw="270">
        <cuboid min="1,55,-0" max="-0,55,1"/>
    </default>
</spawns>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<toolrepair>
    <tool>diamond sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>diamond helmet</item>
    <item>diamond chestplate</item>
    <item>diamond leggings</item>
    <item>diamond boots</item>
    <item>cooked beef</item>
    <item>glass bottle</item>
    <item>ender pearl</item>
</itemremove>
<timelock>on</timelock>
<blitz>
    <time>15m</time>
    <lives>1</lives>
</blitz>
<include src="blitz-global.xml"/>
</map>
