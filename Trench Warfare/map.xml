<?xml version="1.0"?>
<map proto="1.4.0">
<name>Trench Warfare</name>
<version>0.1</version>
<objective>Be the team with the least amount of deaths after 10 minutes.</objective>
<authors>
    <author uuid="1379cb6e-f291-4498-9807-e636f9674ac0"/> <!-- SH4D0W_HAWK -->
</authors>
<contributors>
    <contributor uuid="6968cbde-c2b7-479c-a8da-f33f109f013b" contribution="XML"/> <!-- Brottweiler -->
</contributors>
<score>
    <kills>1</kills>
    <deaths>1</deaths>
</score>
<time>10m</time>
<rules>
    <rule>Switching/exchanging classses or items within a class is illegal.</rule>
</rules>
<hunger>
    <depletion>off</depletion>
</hunger>
<timelock>on</timelock>
<teams>
    <team id="blues" color="blue" max="20" show-name-tags="allies">Blue</team>
    <team id="reds" color="dark red" max="20" show-name-tags="allies">Red</team>
</teams>
<spawns> <!-- Not changed yet -->
    <spawn team="blues">
        <regions yaw="0">
            <cylinder base="0.5, 20, -70.5" radius="2.5" height="1"/>
        </regions>
    </spawn>
    <spawn team="reds">
        <regions yaw="180">
            <cylinder base="0.5, 20, 70.5" radius="2.5" height="1"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="0">
            <cylinder base="0.5, 8, 0.5" radius="10.5" height="1"/>
        </regions>
    </default>
</spawns>
<classes family="offensive">
    <class name="Soldier" default="true" description="Basic infantry equipped with medium armor and weapon." icon="iron sword">
        <kit>
            <item slot="0">iron sword</item>
            <item slot="1" amount="16">egg</item>
            <item slot="2" amount="5">grilled pork</item>
            <helmet material="diamond helmet"/>
            <chestplate material="iron chestplate"/>
            <leggings material="iron leggings"/>
            <boots material="iron boots"/>
        </kit>
    </class>
</classes>
<filters>
    <filter id="only-red">
        <team>red</team>
    </filter>
    <filter id="only-blue">
        <team>blue</team>
    </filter>
    <filter id="no-tnt">
        <deny>
            <block>tnt</block>
        </deny>
    </filter>
    <filter id="break-restrictions"> <!--Deny breaking stone brick and iron objects-->
        <deny>
            <block>iron block</block>
            <block damage="5">step</block>
            <block>redstone wire</block>
            <block>wall sign</block>
            <block>stone plate</block>
            <block>smooth brick</block>
            <block>iron fence</block>
            <block>smooth stairs</block>
            <block>wood button</block>
        </deny>
    </filter>
</filters>
<regions>
    <!--Playing Field Regions-->
    <union name="bases">
        <rectangle name="red-base" min="60,-17" max="76,18"/>
        <rectangle name="blue-base" min="-61,18" max="-77,-17"/>
    </union>
    <union name="sides">
        <rectangle name="red-side-right" min="59,-11" max="44,-17"/>
        <rectangle name="red-side-left" min="59,12" max="44,18"/>
        <rectangle name="blue-side-left" min="-60,12" max="-45,18"/>
        <rectangle name="blue-side-right" min="-60,-11" max="-45,-17"/>
    </union>
    <union name="playable">
        <rectangle name="main-area" min="59,-10" max="-60,11"/>
        <region id="bases"/>
        <region id="sides"/>
    </union>
    <union name="cannons">
        <cuboid name="red-cannon1" min="68,75,-5" max="65,77,-5"/>
        <cuboid name="red-cannon2" min="71,75,0" max="63,76,1"/>
        <cuboid name="red-cannon3" min="68,75,6" max="65,77,6"/>
        <cuboid name="blue-cannon1" min="-69,75,6" max="-66,77,6"/>
        <cuboid name="blue-cannon2" min="-72,75,1" max="-64,76,0"/>
        <cuboid name="blue-cannon3" min="-69,75,-5" max="-66,77,-5"/>
    </union>
    <apply block="deny-all">
        <negative name="playable-inverse">
            <region id="playable"/>
        </negative>
    </apply>
    <apply enter="only-red">
        <rectangle name="red-home" min="60,-17" max="76,18"/>
        <rectangle name="red-home-side-right" min="59,-11" max="44,-17"/>
        <rectangle name="red-home-side-left" min="59,12" max="44,18"/>
    </apply>
    <apply enter="only-blue">
        <rectangle name="blue-home" min="-61,18" max="-77,-17"/>
        <rectangle name="blue-home-side-left" min="-60,12" max="-45,18"/>
        <rectangle name="blue-home-side-right" min="-60,-11" max="-45,-17"/>
    </apply>
    <apply block="deny-all">
        <region id="blue-home"/>
        <region id="red-home"/>
    </apply>
    <apply block-break="break-restrictions" block="no-tnt">
        <complement>
            <region id="playable"/>
            <region id="red-home"/>
            <region id="blue-home"/>
        </complement>
    </apply>
    <apply block="allow-all">
        <region id="cannons"/>
    </apply>
</regions>
<tnt>
    <blockdamage>off</blockdamage>
</tnt>
<itemremove>
    <item>potion</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>gold helmet</item>
    <item>chainmail leggings</item>
    <item>iron helmet</item>
    <item>iron chestplate</item>
    <item>iron leggings</item>
    <item>iron boots</item>
    <item>diamond chestplate</item>
    <item>stone sword</item>
    <item>iron sword</item>
    <item>diamond sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>iron axe</item>
    <item>stone axe</item>
    <item>string</item>
    <item>shears</item>
    <item>flint and steel</item>
    <item>flint</item>
    <item>glass bottle</item>
    <item>stick</item>
    <item>torch</item>
    <item>painting</item>
    <item>dirt</item>
    <item>wood</item>
    <item>leaves</item>
    <item>ladder</item>
    <item>wool</item>
    <item>log</item>
    <item>tnt</item>
    <item>web</item>
    <item>string</item>
    <item>golden apple</item>
    <item>gravel</item>
    <item>flint</item>
    <item>soul sand</item>
</itemremove>
<killreward>
    <item name="Health Kit">golden apple</item>
</killreward>
</map>
